@model System.Xml.XmlElement
<div class="ClientDropDown ClientPanel">
    <table class="ClientDropDownTable">
        <tr>
            <th class="ChangeableStatus">

                <div class="StatusDropdown">
                    <div class="dropdown">
                        @{ string color = "";  string status = Model.GetAttribute("Status"); if (status == "Куплен") { color += "green;"; } else if (status == "Возвращен") { color += "DarkBlue;"; } else { color += "Red;"; } }
                        <a class="btn btn-secondary" href="#" style="background-color: @color" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="false" aria-expanded="false">@status</a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" id="dropdownBlocked" href="#">Заблокирован</a>
                            <a class="dropdown-item" id="dropdownBought" href="#">Куплен</a>
                            <a class="dropdown-item" id="dropdownReturned" href="#">Возвращен</a>
                        </div>
                    </div>
                </div>
            </th>
            <th class="ChangeableName">@Model.GetAttribute("Customer")</th>
            <th class="ChangeableAmount">@Model.GetAttribute("Value")</th>
            <th class="ChangeableDate">@Model.GetAttribute("Regdate")</th>
        </tr>
    </table>
</div>
